{% extends 'erp/layout.html.twig' %}

    {% form_theme form 'bootstrap_3_layout.html.twig' %}

  {% block contentHeader %}
      <section class="content-header">
          <h1>
              Direction Commerciale
              <small>Ajouter des Commerciaux</small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="#"><i class="fas fa-briefcase"></i> Commerciaux</a></li>
              <li class="active">Ajouter</li>
          </ol>
      </section>
  {% endblock %}

{% block content %}
    <div>
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <div class="btn-group">
                        <a href="{{ path('liste-commerciaux') }}"><button type="button" class="btn btn-block btn-default"><i class="fas fa-users"></i> Lister Commerciaux</button></a>
                    </div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-block btn-info">Imprimer</button>
                    </div>
                </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form) }}
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="exampleInputFile">Image</label>
                            <img id="uploadPreview" src="{{ asset('images/no-image-icon.png') }}" width="50" height="50" class="img-fluid" alt="Responsive image">
                    {{ form_row(form.imageFile, {attr: {'onchange': 'previewImage()'} }) }}
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Sexe</label>
                            {{ form_row(form.sexe, {attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Nom</label>
                            {{ form_row(form.nom, {attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Prénom</label>
                            {{ form_row(form.prenom, {attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Date de naissance</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                {{ form_row(form.dateNaissance, {attr: {'class': 'form-control', 'data-inputmask': "'alias': 'dd/mm/yyyy'", 'data-mask':''} }) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Téléphone</label>
                            {{ form_row(form.telephone, {attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-at"></i>
                                </div>
                                {{ form_row(form.email, {attr: {class: 'form-control'} }) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
  {% block javascripts %}
      <script src="{{ asset('js/mon.js') }}"></script>
  {% endblock %}
