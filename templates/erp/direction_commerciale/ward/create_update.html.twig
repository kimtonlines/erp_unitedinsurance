{% extends 'erp/layout.html.twig' %}

    {% form_theme form 'bootstrap_3_layout.html.twig' %}

  {% block contentHeader %}
      <section class="content-header">
          <h1>
              Direction Commerciale
              <small>Créer des Quartiers</small>
          </h1>
          <ol class="breadcrumb">
              <li><a href="#"><i class="fas fa-briefcase"></i> Quartiers</a></li>
              <li class="active">Créer</li>
          </ol>
      </section>
  {% endblock %}

{% block content %}
    <div>
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <div class="btn-group">
                        <a href="{{ path('ward_read') }}" class="btn btn-block btn-default"><i class="fas fa-users"></i> Lister</a>
                    </div>
                    {% if edit %}
                    <div class="btn-group">
                        <a href="{{ path('ward_create') }}" class="btn btn-block btn-success"><i class="fas fa-users"></i> Créer</a>
                    </div>
                    {% endif %}
                    <div class="btn-group">
                        <a href="{{ path('area_read') }}" class="btn btn-block btn-default"><i class="fas fa-map-marker-alt"></i> Lister Zone</a>
                    </div>
                </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form) }}
            <div class="box-body">
                <div class="row">
                    <div class="col-sm-8">
                        {{ include('components/flash_messages.html.twig') }}
                    </div>
                </div>
                <i class="fa fa-exclamation-triangle" style="color: #dd4b39;"> NB: Champs obligatoire.</i>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Nom <i class="fa fa-exclamation-triangle" style="color: #dd4b39;"></i></label>
                            {{ form_row(form.name, {attr: {class: 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label><i class="fas fa-city"></i> Commune <i class="fa fa-exclamation-triangle" style="color: #dd4b39;"></i></label>
                            {{ form_row(form.township, {attr: {'class': 'form-control select2'} }) }}
                        </div>
                    </div>
                    {% if ward.id %}
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label><i class="fa fa-barcode"></i> Code</label>
                            <input type="text" value="{{ ward.code }}" readonly class="form-control">
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="box-footer">
                {% if edit %}
                <button type="submit" class="btn btn-warning">Modifier</button>
                {% else %}
                <button type="submit" class="btn btn-success">Ajouter</button>
                {% endif %}
            </div>
            {{ form_end(form) }}
            {% if edit %}
            <div style="margin-right: 30%; margin-left: 30%">
                <button type="submit" class="btn btn-block btn-danger" data-toggle="modal" data-target="#modal-danger"> <i class="fa fa-"></i> Supprimer</button>
                <div class="btn-group">
                    <div class="modal modal-danger fade" id="modal-danger" style="display: none;">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span></button>
                                    <h4 class="modal-title">  <i class="fa fa-exclamation-triangle"> NB: La suppression est irréversible.</i></h4>
                                </div>
                                <div class="modal-body">
                                    <p>Voulez-vous vraiment supprimer {{ ward.name }} ?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Annuler</button>
                                    <form action="{{ url('ward_delete', {'id': ward.id}) }}" method="post" data-confirmation="true" id="delete-form">
                                        <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
                                        <button type="submit" class="btn btn-outline">Confirmer</button>
                                    </form>
                                </div>
                            </div>
                            <!-- /.modal-content -->
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}
  {% block javascripts %}
      <script src="{{ asset('js/mon.js') }}"></script>
  {% endblock %}
